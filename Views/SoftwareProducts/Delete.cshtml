@model state_software_marketplace.Models.SoftwareProduct
@{
    ViewData["Title"] = "Delete Software Product";
}
<h1>Delete Software Product</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Vendor</dt>
        <dd class="col-sm-10">@Model.Vendor</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
